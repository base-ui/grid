.row
  margin-left -15px
  margin-right -15px

  &:before, &:after
    display table
    content " "
    line-height 0

  &:after
    clear both

  >*
    float left
    min-height 1px
    position relative
    padding-left 15px
    padding-right 15px
    box-sizing border-box
    -ms-box-sizing border-box
    -moz-box-sizing border-box
    -webkit-box-sizing border-box

  >.centered
    margin-left auto
    margin-right auto
    float none

